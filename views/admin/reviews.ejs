<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-0 d-flex align-items-center">
            <div class="bg-warning text-white rounded-3 p-2 me-3"
                style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-star"></i>
            </div>
            Quản lý đánh giá
        </h2>
        <p class="text-muted mb-0 mt-1">Quản lý đánh giá và nhận xét của khách hàng</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-danger">
            <i class="fas fa-trash me-1"></i>
            Xóa đã chọn
        </button>
    </div>
</div>

<!-- Reviews Filters -->
<div class="card card-custom mb-4">
    <div class="card-body">
        <form method="GET" action="/admin/reviews" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-search me-2 text-muted"></i>
                    Tìm kiếm
                </label>
                <input type="text" class="form-control" name="search" placeholder="Tên sản phẩm, khách hàng...">
            </div>
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-star me-2 text-muted"></i>
                    Đánh giá
                </label>
                <select class="form-select" name="rating">
                    <option value="">Tất cả đánh giá</option>
                    <option value="5">5 sao</option>
                    <option value="4">4 sao</option>
                    <option value="3">3 sao</option>
                    <option value="2">2 sao</option>
                    <option value="1">1 sao</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-filter me-2 text-muted"></i>
                    Trạng thái
                </label>
                <select class="form-select" name="status">
                    <option value="">Tất cả trạng thái</option>
                    <option value="approved">Đã duyệt</option>
                    <option value="pending">Chờ duyệt</option>
                    <option value="rejected">Từ chối</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search"></i>
                </button>
                <a href="/admin/reviews" class="btn btn-outline-secondary">
                    <i class="fas fa-refresh"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Reviews Table -->
<div class="card card-custom">
    <div class="card-header bg-transparent">
        <h5 class="card-title mb-0">Danh sách đánh giá</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th width="50">
                            <input type="checkbox" class="form-check-input" id="selectAll">
                        </th>
                        <th>Sản phẩm</th>
                        <th>Khách hàng</th>
                        <th>Đánh giá</th>
                        <th>Nội dung</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (reviews && reviews.length> 0) { %>
                        <% reviews.forEach(review=> { %>
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input review-checkbox"
                                        value="<%= review._id %>">
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="<%= review.product?.images?.[0] || '/static/images/no-image.jpg' %>"
                                            alt="<%= review.product?.name %>" class="rounded me-3"
                                            style="width: 50px; height: 50px; object-fit: cover;">
                                        <div>
                                            <div class="fw-medium">
                                                <%= review.product?.name || 'Sản phẩm' %>
                                            </div>
                                            <small class="text-muted">
                                                <%= review.product?.category %>
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <div class="fw-medium">
                                            <%= review.user?.name || 'Khách hàng' %>
                                        </div>
                                        <small class="text-muted">
                                            <%= review.user?.email %>
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <% for (let i=1; i <=5; i++) { %>
                                            <i
                                                class="fas fa-star <%= i <= review.rating ? 'text-warning' : 'text-muted' %>"></i>
                                            <% } %>
                                                <span class="ms-2 fw-bold">
                                                    <%= review.rating %>/5
                                                </span>
                                    </div>
                                </td>
                                <td>
                                    <div style="max-width: 200px;">
                                        <p class="mb-0 text-truncate">
                                            <%= review.comment || 'Không có nhận xét' %>
                                        </p>
                                    </div>
                                </td>
                                <td>
                                    <% let statusConfig={ approved: { class: 'success' , text: 'Đã duyệt' }, pending: {
                                        class: 'warning' , text: 'Chờ duyệt' }, rejected: { class: 'danger' ,
                                        text: 'Từ chối' } }; let config=statusConfig[review.status] || {
                                        class: 'warning' , text: 'Chờ duyệt' }; %>
                                        <span class="badge bg-<%= config.class %>">
                                            <%= config.text %>
                                        </span>
                                </td>
                                <td>
                                    <span class="text-muted">
                                        <%= new Date(review.createdAt).toLocaleDateString('vi-VN') %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-success" title="Duyệt">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="8" class="text-center py-5">
                                            <div class="mb-3">
                                                <i class="fas fa-star fa-3x text-muted opacity-50"></i>
                                            </div>
                                            <h5 class="text-muted">Chưa có đánh giá nào</h5>
                                            <p class="text-muted">Đánh giá của khách hàng sẽ hiển thị ở đây</p>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function toggleSelectAll() {
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('.review-checkbox');

        checkboxes.forEach(checkbox => {
            checkbox.checked = selectAll.checked;
        });
    }

    document.addEventListener('DOMContentLoaded', function () {
        const selectAll = document.getElementById('selectAll');
        if (selectAll) {
            selectAll.addEventListener('change', toggleSelectAll);
        }
    });
</script>