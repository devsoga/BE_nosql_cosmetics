<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-0">
            <i class="fas fa-user-circle me-2"></i>
            Chi tiết khách hàng
        </h2>
    </div>
    <a href="/admin/users" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card card-custom mb-4">
            <div class="card-body text-center">
                <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" 
                     style="width: 80px; height: 80px; border-radius: 50%; font-size: 2rem;">
                    <%= (user.firstName || user.email || 'U').charAt(0).toUpperCase() %>
                </div>
                <h5 class="mb-1"><%= user.firstName %> <%= user.lastName %></h5>
                <p class="text-muted mb-3"><%= user.email %></p>
                
                <div class="d-flex justify-content-center gap-2">
                    <% if (user.role === 'admin') { %>
                        <span class="badge bg-danger">Admin</span>
                    <% } else { %>
                        <span class="badge bg-info">Khách hàng</span>
                    <% } %>
                    
                    <% if (user.verify) { %>
                        <span class="badge bg-success">Đã xác thực</span>
                    <% } else { %>
                        <span class="badge bg-warning text-dark">Chưa xác thực</span>
                    <% } %>
                </div>
            </div>
            <div class="card-footer bg-white p-3">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">SĐT:</span>
                    <span class="fw-medium"><%= user.phoneNumber || 'Chưa cập nhật' %></span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Ngày tham gia:</span>
                    <span class="fw-medium"><%= new Date(user.createdAt).toLocaleDateString('vi-VN') %></span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Tổng đơn hàng:</span>
                    <span class="fw-bold text-primary"><%= orders.length %></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card card-custom">
            <div class="card-header bg-transparent">
                <h5 class="card-title mb-0">Lịch sử mua hàng</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (orders && orders.length > 0) { %>
                                <% orders.forEach(order => { %>
                                    <tr>
                                        <td>
                                            <a href="/admin/orders/view/<%= order._id %>" class="fw-medium text-decoration-none">
                                                #<%= order._id.toString().slice(-6) %>
                                            </a>
                                        </td>
                                        <td><%= new Date(order.createAt).toLocaleDateString('vi-VN') %></td>
                                        <td class="text-success fw-bold">
                                            <%= new Intl.NumberFormat('vi-VN').format(order.totalPriceOrder) %> VNĐ
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary"><%= order.status %></span>
                                        </td>
                                        <td class="text-end">
                                            <a href="/admin/orders/view/<%= order._id %>" class="btn btn-sm btn-outline-primary">
                                                Xem
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">
                                        Khách hàng này chưa có đơn hàng nào.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>